{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDirs": [
      "src",
      "tests",
    ],
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ]
    },
  },
  "include": [
    "src",
    "tests"
  ],
  "ts-node": {
    "swc": true
  }
}
